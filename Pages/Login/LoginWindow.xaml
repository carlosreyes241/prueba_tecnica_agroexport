<Window x:Class="prueba_tecnica_agroexport.Pages.Login.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Iniciar sesión"
        Height="550"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F2F5">

    <Border Margin="20"
            Background="White"
            CornerRadius="10"
            Padding="30"
            BorderBrush="#2D3E50"
            BorderThickness="1">
        <StackPanel VerticalAlignment="Center">

            <!-- Título -->
            <TextBlock Text="Iniciar sesión"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#2D3E50"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 25"/>

            <!-- Correo -->
            <TextBlock Text="Correo electrónico"
                       Foreground="#555"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox"
                     Height="35"
                     FontSize="14"
                     Padding="5"
                     Background="#F0F2F5"
                     BorderBrush="#CCC"
                     Margin="0,0,0,20"/>

            <!-- Contraseña -->
            <TextBlock Text="Contraseña"
                       Foreground="#555"
                       Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox"
                         Height="35"
                         FontSize="14"
                         Padding="5"
                         Background="#F0F2F5"
                         BorderBrush="#CCC"
                         Margin="0,0,0,30"/>

            <!-- Botón -->
            <Button Content="Ingresar"
                    Click="Login_Click"
                    Height="40"
                    Background="#2D3E50"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="14"
                    BorderBrush="{x:Null}"
                    Cursor="Hand"
                    BorderThickness="0"/>

        </StackPanel>
    </Border>
</Window>
